{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": [
      "vitest/globals",
      "firefox-webext-browser"
    ]
  },
  "include": [
    "src/**/*",
    "vite.config.ts",
    "tests/**/*"
  ]
}
