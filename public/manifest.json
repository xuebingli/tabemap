{
  "manifest_version": 3,
  "name": "Tabemap",
  "version": "1.0",
  "description": "Show Tabelog ratings on Google Maps",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.google.com/maps/*",
    "*://*.tabelog.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/maps/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon.png",
        "assets/*"
      ],
      "matches": [
        "*://*.google.com/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "tabemap@example.com",
      "strict_min_version": "115.0"
    }
  }
}
